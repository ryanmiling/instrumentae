#/!bin/bash

echo Backup customized dot-files to this repository.
echo
echo Dot-files being backed up will only replace those inside conf/

while true
do
    read -p "Continue? [y/N] " answer
    if [ $answer = "y" ]
    then
        break
    elif [ $answer = "N" ]
    then
        exit
    fi
done

for dotFile in $(ls -A conf)
do
    if [ -f ~/$dotFile ]
    then
        cp -rv ~/$dotFile conf
    else
        echo Skipping $dotFile, does not exist
    fi
done
