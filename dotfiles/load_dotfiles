#/!bin/bash

echo Copy dot-files to your home folder for environment customization.
echo
echo "WARNING dot-files in home folder will be replaced by contents in conf/"

while true
do
    read -p "Continue? [y/N] " answer
    if [ $answer = "y" ]
    then
        break
    elif [ $answer = "N" ]
    then
        exit
    fi
done


for dotFile in $(ls -A conf)
do
    cp -rv conf/$dotFile ~/
done
